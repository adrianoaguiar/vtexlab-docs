{
    "product": "gcs",
    "version": "latest",
    "resource": "giftcard",
    "documentation": "api",
    "methods": [
        {
            "title": "Criar gift card",
            "description": "Permite criar um novo gift card para um cliente",
            "verb": "POST",
            "route": {
                "template": "/api/gift-card-system/pvt/giftCards"
            },
            "arguments": {
                "customerId": {
                    "type": "string",
                    "description": "Id do profile do cliente ao qual o cartão pertence",
                    "required": true
                },
                "cardName": {
                    "type": "string",
                    "description": "Nome do cartão",
                    "required": true
                },
                "caption": {
                    "type": "string",
                    "description": "Descrição do cartão",
                    "required": false
                },
                "expiringDate": {
                    "type": "date",
                    "description": "Data de expiração",
                    "required": true
                },
                "multipleCredits": {
                    "type": "bool",
                    "description": "Flag que indica se o cartão pode ou não ter multiplos creditos",
                    "required": false
                },
                "multipleRedemptions": {
                    "type": "bool",
                    "description": "Flag que indica se o cartão pode ou não ter multiplos resgates",
                    "required": false
                }
            },
            "attributes": {
                "id": {
                    "type": "int",
                    "description": "Identificador do Gift Card",
                    "required": false
                },
                "redemptionCode": {
                    "type": "string",
                    "description": "Código para resgate do saldo",
                    "required": false
                },
                "balance": {
                    "type": "int",
                    "description": "Saldo do cartão",
                    "required": false
                },
                "cardName": {
                    "type": "string",
                    "description": "Nome do cartão",
                    "required": false
                },
                "emissionDate": {
                    "type": "date",
                    "description": "Data de emissao do cartao",
                    "required": false
                },
                "expiringDate": {
                    "type": "int",
                    "description": "Data de expiração do cartao",
                    "required": false
                },
                "multipleCredits": {
                    "type": "bool",
                    "description": "Valor que indica se o cartão é de multiplos créditos",
                    "required": false
                },
                "multipleRedemptions": {
                    "type": "bool",
                    "description": "Valor que indica se o cartão é de multiplos Redemption Codes",
                    "required": false
                },
                "ownerId": {
                    "type": "string",
                    "description": "ID do dono do cartão",
                    "required": false
                },
                "restrictedToOwner": {
                    "type": "bool",
                    "description": "Valor que indica se o cartão é restrito para o dono",
                    "required": false
                },
                "statusId": {
                    "type": "int",
                    "description": "Status",
                    "required": false
                },
                "caption": {
                    "type": "string",
                    "description": "Descrição do cartão",
                    "required": false
                }
            },
            "example": {
                "request": [
                    {
                        "customerId": "019a0cc1-409a-4c16-859b-eefdb81f825e",
                        "cardName": "loyalty-program",
                        "caption": "Fidelidade 2014",
                        "expiringDate": "2015-04-01T00:00:00"
                    }
                ],
                "response": [
                    {
                        "id": 709,
                        "redemptionCode": "UVXO-MFVX-LYOP-CMWM",
                        "cardName": "loyalty-program",
                        "emissionDate": "2014-04-01T19:52:01.0886427Z",
